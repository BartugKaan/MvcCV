@using MvcCV.Models.Entity;
@model List<TBLEducation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row no-gutters">
        <div class="col-12 px-3 py-4">
            <div class="card shadow-sm w-100">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-bolt mr-2"></i> Education List
                    </h3>
                    <div class="d-flex align-items-center">
                        <div class="input-group input-group-sm mr-2" style="max-width: 360px;">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-search"></i>
                                </span>
                            </div>
                            <input id="educationSearch" type="text" class="form-control" placeholder="Search Education...">
                            <div class="input-group-append">
                                <button type="button" id="clearSearch" class="btn btn-outline-secondary">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <a href="/Education/AddEducation" class="btn btn-success w-100" title="Add education">
                            <i class="fas fa-plus mr-1"></i> Add Education
                        </a>
                    </div>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive p-3">
                        <table class="table table-striped table-hover mb-0" id="educationsTable">
                            <thead class="thead-light">
                                <tr>
                                    <th>ID</th>
                                    <th>School</th>
                                    <th>Department</th>
                                    <th>Description</th>
                                    <th>Gpa</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ID</td>
                                        <td class="education-name">@item.Title</td>
                                        <td>@item.Subtitle</td>
                                        <td>@item.OptionalSubtitle</td>
                                        <td>@item.Gpa</td>
                                        <td>@item.Date</td>
                                        <td>
                                            <a href="/Education/GetEducation/@item.ID" class="btn btn-outline-secondary btn-sm mr-1" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="/Education/Delete/@item.ID" class="btn btn-outline-danger btn-sm" title="Delete" onclick="confirm('Delete this item?') && this.closest('tr').remove();">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <script>
                (function () {
                    var searchInput = document.getElementById('educationSearch');
                    var clearBtn = document.getElementById('clearSearch');
                    var table = document.getElementById('educationsTable');
                    if (!table) return;

                    var rows = table.querySelectorAll('tbody tr');

                    function filter() {
                        var q = (searchInput.value || '').toLowerCase().trim();
                        rows.forEach(function (row) {
                            var nameCell = row.querySelector('.education-name');
                            var text = (nameCell ? nameCell.textContent : '').toLowerCase();
                            var match = !q || text.indexOf(q) !== -1;
                            row.style.display = match ? '' : 'none';
                        });
                    }

                    function clearSearch() {
                        searchInput.value = '';
                        filter();
                        searchInput.focus();
                    }

                    if (searchInput) {
                        searchInput.addEventListener('keyup', filter);
                    }
                    if (clearBtn) {
                        clearBtn.addEventListener('click', clearSearch);
                    }
                })();
            </script>
        </div>
    </div>
</section>
