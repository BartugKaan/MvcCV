@using MvcCV.Models.Entity;
@model List<TBLContact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- /.col -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        @foreach (var item in Model)
                        {
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    <div class="time-label">
                                        <span class="bg-success">
                                            @((item.Date ?? DateTime.MinValue).ToString("dd/MM/yyyy"))
                                        </span>
                                    </div>
                                    <div>
                                        <i class="fas fa-comments bg-warning"></i>
                                        <div class="timeline-item">
                                            <span class="time"><i class="far fa-mail-bulk"></i> @item.Mail</span>
                                            <h3 class="timeline-header"><a href="#">@item.FullName</a> -  @item.Subject</h3>
                                            <div class="timeline-body">
                                                @item.Message
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>